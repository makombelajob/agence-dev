{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<!-- Page Header -->
<section class="section bg-light" style="padding-top: 120px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold text-primary mb-3" data-aos="fade-up">Mes Projets</h1>
                <p class="lead text-muted" data-aos="fade-up" data-aos-delay="100">
                    Découvrez une sélection de mes projets réalisés avec passion et expertise
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Filter Buttons -->
<section class="section py-4">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="filter-buttons" data-aos="fade-up">
                    <button class="btn btn-filter active" data-filter="all">
                        <i class="fas fa-th-large me-2"></i>Tous
                    </button>
                    <button class="btn btn-filter" data-filter="featured">
                        <i class="fas fa-star me-2"></i>Projets phares
                    </button>
                    <button class="btn btn-filter" data-filter="symfony">
                        <i class="fab fa-symfony me-2"></i>Symfony
                    </button>
                    <button class="btn btn-filter" data-filter="react">
                        <i class="fab fa-react me-2"></i>React.js
                    </button>
                    <button class="btn btn-filter" data-filter="api">
                        <i class="fas fa-plug me-2"></i>API REST
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Grid -->
<section class="section">
    <div class="container">
        <div class="row" id="projects-grid">
            {% for project in projects %}
            <div class="col-lg-4 col-md-6 mb-4 project-item" 
                data-category=""
                 data-aos="fade-up" 
                 data-aos-delay="{{ loop.index * 100 }}">
                <div class="project-card h-100">
                    <div class="project-image">
                        <div class="project-overlay">
                            <div class="project-actions">
                                <a href="{{ project.demo_url }}" class="btn btn-light btn-sm me-2" target="_blank">
                                    <i class="fas fa-external-link-alt me-1"></i>Démo
                                </a>
                                <a href="{{ project.github_url }}" class="btn btn-outline-light btn-sm" target="_blank">
                                    <i class="fab fa-github me-1"></i>Code
                                </a>
                            </div>
                        </div>
                        {% if project.featured %}
                        <div class="featured-badge">
                            <i class="fas fa-star"></i>
                        </div>
                        {% endif %}
                        <div class="project-preview">
                            <i class="fas fa-code"></i>
                        </div>
                    </div>
                    <div class="project-content">
                        <div class="project-header">
                            <h5 class="project-title">{{ project.title }}</h5>
                            {% if project.featured %}
                            <span class="project-badge">Projet phare</span>
                            {% endif %}
                        </div>
                        <p class="project-description">{{ project.description }}</p>
                        <div class="project-technologies">
                            {% for tech in project.technologies %}
                            <span class="tech-tag tech-{{ tech|lower|replace({' ': '-'}) }}">
                                {% if tech == 'Symfony' %}
                                    <i class="fab fa-symfony me-1"></i>
                                {% elseif tech == 'React.js' %}
                                    <i class="fab fa-react me-1"></i>
                                {% elseif tech == 'PHP' %}
                                    <i class="fab fa-php me-1"></i>
                                {% elseif tech == 'JavaScript' %}
                                    <i class="fab fa-js-square me-1"></i>
                                {% elseif tech == 'MySQL' %}
                                    <i class="fas fa-database me-1"></i>
                                {% elseif tech == 'Bootstrap' %}
                                    <i class="fab fa-bootstrap me-1"></i>
                                {% elseif tech == 'API REST' %}
                                    <i class="fas fa-plug me-1"></i>
                                {% elseif tech == 'AJAX' %}
                                    <i class="fas fa-exchange-alt me-1"></i>
                                {% elseif tech == 'JWT' %}
                                    <i class="fas fa-key me-1"></i>
                                {% elseif tech == 'Swagger' %}
                                    <i class="fas fa-book me-1"></i>
                                {% elseif tech == 'Chart.js' %}
                                    <i class="fas fa-chart-bar me-1"></i>
                                {% elseif tech == 'PWA' %}
                                    <i class="fas fa-mobile-alt me-1"></i>
                                {% elseif tech == 'Service Workers' %}
                                    <i class="fas fa-cogs me-1"></i>
                                {% endif %}
                                {{ tech }}
                            </span>
                            {% endfor %}
                        </div>
                        <div class="project-footer">
                            <div class="project-links">
                                <a href="{{ project.demo_url }}" class="project-link" target="_blank">
                                    <i class="fas fa-external-link-alt"></i>
                                    <span>Voir le projet</span>
                                </a>
                                <a href="{{ project.github_url }}" class="project-link" target="_blank">
                                    <i class="fab fa-github"></i>
                                    <span>Code source</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Project Stats -->
<section class="section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <div class="stat-number">{{ projects|length }}+</div>
                    <div class="stat-label">Projets réalisés</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support disponible</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Clients satisfaits</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
                <div class="stat-card text-center">
                    <div class="stat-icon">
                        <i class="fas fa-code-branch"></i>
                    </div>
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Code maintenu</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="text-white mb-3">Vous avez un projet en tête ?</h2>
                <p class="lead mb-0">
                    Je serais ravi de discuter de votre projet et de vous aider à le concrétiser avec les meilleures technologies.
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="{{ path('app_contact') }}" class="btn btn-light btn-custom">
                    <i class="fas fa-envelope me-2"></i>Discutons de votre projet
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

