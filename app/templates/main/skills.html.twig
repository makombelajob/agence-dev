{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<!-- Page Header -->
<section class="section bg-light" style="padding-top: 120px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold text-primary mb-3" data-aos="fade-up">Mes Compétences</h1>
                <p class="lead text-muted" data-aos="fade-up" data-aos-delay="100">
                    Un aperçu de mes compétences techniques et des technologies que je maîtrise
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="section">
    <div class="container">
        {% for category, categorySkills in skills %}
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="section-title text-start mb-4" data-aos="fade-up">
                    <i class="fas fa-code me-3 text-primary"></i>{{ category }}
                </h2>
            </div>
        </div>
        
        <div class="row mb-5">
            {% for skill in categorySkills %}
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                <div class="skill-card h-100">
                    <div class="skill-card-header">
                        <div class="skill-icon-wrapper">
                            <i class="{{ skill.icon }}" style="color: {{ skill.color }}"></i>
                        </div>
                        <h5 class="skill-name">{{ skill.name }}</h5>
                    </div>
                    <div class="skill-card-body">
                        <div class="skill-level">
                            <div class="skill-bar-container">
                                <div class="skill-bar">
                                    <div class="skill-progress" 
                                         data-level="{{ skill.level }}" 
                                         style="background: {{ skill.color }}; width: 0%">
                                    </div>
                                </div>
                                <span class="skill-percentage">{{ skill.level }}%</span>
                            </div>
                        </div>
                        <div class="skill-description">
                            {% if skill.name == 'HTML5' %}
                                Maîtrise complète du HTML5 sémantique et des bonnes pratiques SEO.
                            {% elseif skill.name == 'CSS3' %}
                                Expert en CSS3, animations, flexbox, grid et design responsive.
                            {% elseif skill.name == 'JavaScript' %}
                                Développement JavaScript moderne, ES6+, et manipulation du DOM.
                            {% elseif skill.name == 'React.js' %}
                                Développement d'applications React avec hooks et context API.
                            {% elseif skill.name == 'Bootstrap' %}
                                Utilisation avancée de Bootstrap 5 et personnalisation CSS.
                            {% elseif skill.name == 'PHP' %}
                                PHP 8+ orienté objet, patterns MVC et bonnes pratiques.
                            {% elseif skill.name == 'Symfony' %}
                                Symfony 7, Doctrine ORM, et architecture d'applications complexes.
                            {% elseif skill.name == 'MySQL' %}
                                Optimisation de requêtes, indexation et gestion de bases de données.
                            {% elseif skill.name == 'API REST' %}
                                Conception et développement d'APIs RESTful avec authentification.
                            {% elseif skill.name == 'AJAX' %}
                                Requêtes asynchrones, JSON et intégration avec les APIs.
                            {% elseif skill.name == 'Git' %}
                                Workflow Git avancé, branches, merges et collaboration en équipe.
                            {% elseif skill.name == 'Docker' %}
                                Containerisation d'applications et orchestration avec Docker Compose.
                            {% elseif skill.name == 'Linux' %}
                                Administration système Linux et déploiement de serveurs.
                            {% elseif skill.name == 'Composer' %}
                                Gestion des dépendances PHP et autoloading avec Composer.
                            {% elseif skill.name == 'NPM' %}
                                Gestion des packages JavaScript et scripts de build.
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</section>

<!-- Experience Timeline -->
<section class="section bg-light">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Mon Parcours</h2>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="timeline">
                    <div class="timeline-item" data-aos="fade-right">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h5>Développeur Web Full-Stack</h5>
                            <span class="timeline-date">2020 - Présent</span>
                            <p>Développement d'applications web complètes avec Symfony et React.js. Gestion de projets de A à Z.</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item" data-aos="fade-left">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h5>Spécialisation Symfony</h5>
                            <span class="timeline-date">2019 - 2020</span>
                            <p>Formation intensive sur Symfony, Doctrine ORM et les bonnes pratiques de développement PHP.</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item" data-aos="fade-right">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h5>Développeur Frontend</h5>
                            <span class="timeline-date">2018 - 2019</span>
                            <p>Développement d'interfaces utilisateur avec HTML5, CSS3, JavaScript et React.js.</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item" data-aos="fade-left">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h5>Formation Web</h5>
                            <span class="timeline-date">2017 - 2018</span>
                            <p>Formation initiale en développement web et découverte des technologies modernes.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Certifications -->
<section class="section">
    <div class="container">
        <h2 class="section-title" data-aos="fade-up">Certifications & Formations</h2>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="certification-card">
                    <div class="cert-icon">
                        <i class="fas fa-certificate text-warning"></i>
                    </div>
                    <h5>Symfony Certification</h5>
                    <p>Certification officielle Symfony Developer</p>
                    <span class="cert-date">2023</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="certification-card">
                    <div class="cert-icon">
                        <i class="fab fa-aws text-warning"></i>
                    </div>
                    <h5>AWS Cloud Practitioner</h5>
                    <p>Certification AWS Cloud Fundamentals</p>
                    <span class="cert-date">2022</span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="certification-card">
                    <div class="cert-icon">
                        <i class="fab fa-google text-warning"></i>
                    </div>
                    <h5>Google Analytics</h5>
                    <p>Certification Google Analytics Individual Qualification</p>
                    <span class="cert-date">2021</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="section bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="text-white mb-3">Intéressé par mon profil ?</h2>
                <p class="lead mb-0">
                    Découvrez mes projets et n'hésitez pas à me contacter pour discuter de votre prochain projet.
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="{{ path('app_projects') }}" class="btn btn-light btn-custom me-3">
                    <i class="fas fa-folder me-2"></i>Mes Projets
                </a>
                <a href="{{ path('app_contact') }}" class="btn btn-outline-light btn-custom">
                    <i class="fas fa-envelope me-2"></i>Me Contacter
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

